{% set icon_name = name|default(icon|default('help-circle')) %}
{% set icon_size = size|default('md') %}
{% set icon_variant = variant|default('') %}
{% set custom_class = class|default('') %}

{# Build CSS classes #}
{% set classes = ['lucide'] %}
{% if not custom_class %}
    {% set classes = classes|merge(['icon-' ~ icon_size]) %}
    {% if icon_variant %}
        {% set classes = classes|merge(['icon-' ~ icon_variant]) %}
    {% endif %}
{% else %}
    {% set classes = classes|merge([custom_class]) %}
{% endif %}

<i data-lucide="{{ icon_name }}" class="{{ classes|join(' ') }}"{{ attributes|default('')|raw }}></i> 