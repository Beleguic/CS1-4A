{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
    {% for field in form %}
        {% if field.vars.name != '_token' %}
            <div class="flex flex-col">
                {{ form_label(field, null, {'label_attr': {'class': 'font-medium'}}) }}
                {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'}}) }}
                {{ form_errors(field, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>
        {% endif %}
    {% endfor %}
    <div class="text-center mt-4">
        <button type="submit" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white" style="background-color: #134F63;" onmouseover="this.style.backgroundColor='#05C1FA'" onmouseout="this.style.backgroundColor='#134F63'">
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}

{% block javascripts %}
    <script src="{{ asset('js/devis.js') }}"></script>
{% endblock %}
