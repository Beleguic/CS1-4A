{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold underline text-center my-8">Client</h1>

    <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full leading-normal">
            <tbody>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Id</th>
                    <td class="px-5 py-3 border-b border-gray-200 bg-white text-sm">{{ client.id }}</td>
                </tr>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Nom</th>
                    <td class="px-5 py-3 border-b border-gray-200 bg-white text-sm">{{ client.Nom }}</td>
                </tr>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Prenom</th>
                    <td class="px-5 py-3 border-b border-gray-200 bg-white text-sm">{{ client.Prenom }}</td>
                </tr>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
                    <td class="px-5 py-3 border-b border-gray-200 bg-white text-sm">{{ client.Email }}</td>
                </tr>
                <tr>
                    <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">NumeroTelephone</th>
                    <td class="px-5 py-3 border-b border-gray-200 bg-white text-sm">{{ client.NumeroTelephone }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4 space-x-2">
        <a href="{{ path('front_app_client_index') }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white" style="background-color: #134F63; transition: background-color 0.2s ease-in-out;" onmouseover="this.style.backgroundColor='#05C1FA'" onmouseout="this.style.backgroundColor='#134F63'">Back to list</a>
        <a href="{{ path('front_app_client_edit', {'id': client.id}) }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white" style="background-color: #134F63; transition: background-color 0.2s ease-in-out;" onmouseover="this.style.backgroundColor='#05C1FA'" onmouseout="this.style.backgroundColor='#134F63'">Edit</a>
    </div>

    <div class="mt-4 text-center">
        {{ include('/front/client/_delete_form.html.twig') }}
    </div>
{% endblock %}
