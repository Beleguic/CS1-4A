{% extends 'base.html.twig' %}

{% block title %}Facture {{ facture.id }}{% endblock %}

{% block body %}

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg my-5">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <tbody class="bg-white dark:bg-gray-800">
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Id</th>
                    <td class="py-4 px-6">{{ facture.id }}</td>
                </tr>
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Client Name</th>
                    <td class="py-4 px-6">{{ facture.devis.clientName }}  {{ facture.devis.Client }}</td>
                </tr>
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Date</th>
                    <td class="py-4 px-6">{{ facture.date ? facture.date|date('Y-m-d H:i:s') : 'N/A' }}</td>
                </tr>
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Amount</th>
                    <td class="py-4 px-6">{{ facture.amount is not null ? facture.amount : 'N/A' }}</td>
                </tr>
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Taxes</th>
                    <td class="py-4 px-6">{{ facture.devis.taxes }}</td>
                </tr>
                <tr class="border-b dark:border-gray-700">
                    <th class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">Paid</th>
                    <td class="py-4 px-6">{{ facture.paid ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('front_app_facture_index') }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white" style="background-color: #134F63; margin-right: 8px;" onmouseover="this.style.backgroundColor='#05C1FA'" onmouseout="this.style.backgroundColor='#134F63'">Back to List</a>

    <a href="{{ path('front_app_facture_edit', {'id': facture.id}) }}" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white" style="background-color: #134F63;" onmouseover="this.style.backgroundColor='#05C1FA'" onmouseout="this.style.backgroundColor='#134F63'">Edit</a>

    {{ include('/front/facture/_delete_form.html.twig') }}
{% endblock %}