<form method="post" action="{{ path('front_app_devis_delete', {'id': devis.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="text-center mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devis.id) }}">
    <button type="submit" class="inline-flex items-center justify-center px-4 py-2 border border-transparent font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition ease-in-out duration-150" onmouseover="this.style.backgroundColor='#E53E3E'" onmouseout="this.style.backgroundColor='#C53030'">
        Delete
    </button>
</form>
